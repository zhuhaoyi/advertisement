@charset "utf-8";
/* CSS Document */
   *{list-style:none;font-family:Microsoft YaHei;}
 img{display:block;}
 body{margin:0;
 	  padding:0;}
.clearfix{clear:both;}

/*顶部标题区*/
.header_top{width:1000px;
			height:270px;
			background:url(../images/bgi_top.png) no-repeat;
			margin:0 auto;}

.header{width:860px;
		margin:0 auto;
		margin-top:-92px;}

.header_top #logo{padding-top:20px;
			   margin-left:20px;}
		
.header .title{margin:30px auto;}

.header h1{text-align:center;
		   color:#fff;
		   padding-top:10px;
		   padding-bottom:10px;}
		   
/*中部内容区*/
.content_middle{width:1000px;
				height:558px;
				background:url(../images/bgi_middle.png) no-repeat;
				margin:0 auto;}
				
.left{width:384px;
	  float:left;} 

.left img{margin-left:38px;}

#left_text{width:384px;
		   height:470px;
		   margin-left:20px;}
		   
#left_text p{width:360px;
			 margin:20px auto;
			 font-size:14px;
			 font-weight: 500;}
			 
.right{width:558px;
	   float:right;}
	   
.right img{margin-left:-22px;
		  }

#right_message{width:560px;
			   height:220px;
			   margin-top:30px;}
			   
#right_message .enter{width:540px;
					  padding-top:30px;
					  margin-left:-10px;}

.enter .telnum{width:384px;
			   height:72px;
			   font-size:26px;}
			   
.enter #btn_sub{width:142px;
			height:54px;
			background:url(../images/btn.png) no-repeat;
			outline:none;
			border-style:none;
			}
			
#right_message p{font-size:14px;
		 		 color:#ffc000;
		 		 margin-top:28px;
				 }

.scroll{width:533px;
		height:37px;
		background:url(../images/img_6.png) no-repeat;
		margin-top:20px;
		margin-left:-7px;}
		
.scroll ul{width:260px;
		   height:18px;
		   overflow:hidden;
		   margin:auto;
		   padding-top:9px;
		   font-size:16px;}
		   
.new{width:1000px;
	 height:156px;
	 background:url(../images/bgi_down.png) no-repeat;
	 margin:0 auto;
	 margin-bottom:-20px;}
	 
.new ul{float:left;
		width:80px;
		margin-top:47px;}
		
.new #new_one{margin-left:16px;
			  width:150px;
			  margin-right:86px;}
			  
.new #new_two{margin-right:162px;}

.new #new_three{margin-right:126px;}		
		
.new ul li{margin-bottom:16px;}
	 
.foot{margin:0 auto;}
		


 
